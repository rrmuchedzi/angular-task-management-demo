{
    "name": "tasky_surge",
    "version": "1.0.0",
    "description": "Tasky server application.",
    "main": "index.js",
    "scripts": {
        "prebuild": "if [ -f \"tsconfig.build.json\" ]; then rm -rf ./dist; fi",
        "build": "if [ -f \"tsconfig.build.json\" ]; then $(npm bin)/tsc -p tsconfig.build.json; fi",
        "postbuild": "if [ -f \"tsconfig.build.json\" ]; then $(npm bin)/ts-node scripts/post-build.ts; fi",
        "tsc": "tsc",
        "dev": "NODE_ENV=development ts-node-dev ./src/index.ts",
        "type": "$(npm bin)/tsc --noEmit --skipLibCheck",
        "lint": "$(npm bin)/eslint -c .eslintrc.js --ext .ts,.tsx .",
        "lint-fix": "$(npm bin)/eslint -c .eslintrc.js --ext .ts,.tsx . --fix",
        "pretest": "npm run build",
        "test": "NODE_ENV=test $(npm bin)/jest --verbose --detectOpenHandles --forceExit",
        "test:debug": "NODE_ENV=test node --inspect-brk $(npm bin)/jest --detectOpenHandles --forceExit -i",
        "prettier": "npx prettier --write \"**/*.{ts,tsx,js,md,json,yml,yaml}\"",
        "prettier-check": "npx prettier --check \"**/*.{ts,tsx,js,md,json,yml,yaml}\""
    },
    "author": {
        "name": "Rickson Muchedzi",
        "email": "rrmuchedzi@gmail.com"
    },
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@typegoose/typegoose": "^11.1.0",
        "connect-mongo": "3.2.0",
        "convict": "^6.2.3",
        "cors": "2.8.5",
        "cpy": "8.1.2",
        "express": "4.17.1",
        "express-session": "1.17.0",
        "express-static-gzip": "2.1.1",
        "passport": "^0.5.0",
        "runtypes": "^6.6.0"
    },
    "devDependencies": {
        "@alex_neo/jest-expect-message": "1.0.5",
        "@types/convict": "^6.1.1",
        "@types/cors": "2.8.4",
        "@types/express": "4.17.13",
        "@types/express-serve-static-core": "4.17.5",
        "@types/express-session": "1.15.16",
        "@types/mongodb": "^4.0.7",
        "@types/mongoose": "^5.11.97",
        "@types/node-cron": "^3.0.7",
        "@types/supertest": "^2.0.12",
        "@types/passport": "^1.0.7",
        "@typescript-eslint/eslint-plugin": "5.3.0",
        "@typescript-eslint/parser": "5.3.0",
        "eslint": "8.10.0",
        "eslint-plugin-header": "3.1.1",
        "eslint-plugin-import": "2.25.4",
        "eslint-plugin-jsdoc": "37.9.7",
        "eslint-plugin-no-only-tests": "2.6.0",
        "eslint-plugin-no-skip-tests": "1.1.0",
        "eslint-plugin-unused-imports": "2.0.0",
        "esm": "3.2.25",
        "jest": "^27.3.1",
        "jest-expect-message": "^1.0.2",
        "supertest": "^4.0.2",
        "ts-jest": "27.0.7",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0"
    }
}
